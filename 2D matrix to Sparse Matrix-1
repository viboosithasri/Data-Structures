#include<stdio.h>
int main()
{
    int i=0,j=0,m,k,n,a[100][100],b[100][100];
    printf("Enter the row size and column size:\n");
    scanf("%d%d",&m,&n);
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&a[i][j]);
            if()
        }
    }
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            if(a[i][j]!=0)
            {
               b[k][0]=i;
               b[k][1]=j;
               b[k++][2]=a[i][j];
            }
        }
    }
    for(i=0;i<k;i++)
    {
        for(j=0;j<3;j++)
        {
            printf("%d ",b[i][j]);
        }
        printf("\n");
    }
}
